<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="horizontal|vertical"
        tools:context="pt.ulusofona.ecati.deisi.licenciatura.cm1920.grupo2.ui.activities.PopUpWindowActivity">

        <TextView
            android:id="@+id/popup_info__titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info sobre Swipe"
            android:textSize="30sp"
            android:textColor="@color/colorVeiculoInput"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_close"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/popup_info_swipe_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_swipe_left"
            android:text="swipe para a esquerda para editar os dados de um veiculo"
            android:textSize="18sp"
            android:textColor="@color/colorVeiculoInput"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/popup_info_swipe_rigth"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/popup_info_swipe_rigth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_swipe_rigth"
            android:text="swipe para a direita para eliminar os dados de um veiculo"
            android:textSize="18sp"
            android:textColor="@color/colorVeiculoInput"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/popup_info__titulo"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>