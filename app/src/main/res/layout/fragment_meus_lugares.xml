<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pt.ulusofona.ecati.deisi.licenciatura.cm1920.grupo2.ui.fragments.MeusLugaresFragment">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/ic_reload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/fabNewLugar"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNewLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="onClickNewLugar"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_camera"
            android:tag="@string/NovoVeiculo"
            app:elevation="6dp"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/fab_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="Ir para o Veiculo"
            android:textColor="@color/white"
            app:elevation="6dp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/fabNewLugar"
            app:layout_constraintTop_toTopOf="@id/fabNewLugar"
            app:layout_constraintStart_toStartOf="parent"
            />



</androidx.constraintlayout.widget.ConstraintLayout>